<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="b1">
    <div class="container body-content">
        @RenderBody()
        <br /><br />
        <button onclick="location.href = 'Home/Donate';" id="b2" submit-button">Donate Your Desk!</button>
        <button onclick="location.href = 'Home/Reserve';" id="b2" submit-button">Reserve A Desk!</button>
        <button onclick="location.href = 'Home/FloorMap';" id="b2" submit-button">Map</button>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>