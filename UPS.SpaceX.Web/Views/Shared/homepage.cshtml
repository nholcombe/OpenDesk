<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="b1">
    <div class="container body-content" style="align-items:center">
        @RenderBody()
        <br /><br />
        <button onclick="location.href = 'Donate';" class="btn btn-warning">Donate Your Desk!</button><br /><br />
        <button onclick="location.href = 'Reserve';" class="btn btn-warning">Reserve A Desk!</button><br /><br />
        <button onclick="location.href = 'LookUp';" class="btn btn-warning">Current Reservations</button><br /><br />
        <button onclick="location.href = 'FloorMap';" class="btn btn-warning">Map</button>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>